{
	"version" : 1,
	
	"formatters" : {
		"formatter1" : {
				"format": "%(asctime)s %(levelname)-8s %(message)s",
				"datefmt" : "%Y-%m-%d %H:%M"
		}
	},
	
	"handlers" : {
		"handler1" : {
			"class" : "logging.handlers.RotatingFileHandler",
			"encoding" : "utf-8",
			"filename" : "drive-backup.log", 
			"maxBytes" : 1024000,
			"backupCount" : 3,
			"formatter" : "formatter1"
		}
	},
	
	"loggers" : {
		"rotatingFileLogger" : {
			"level" : "DEBUG",
			"handlers": [ "handler1" ]
		}
	},
	
	"root" : {
		"handlers" : [ "handler1" ],
		"level" : "DEBUG"
	}

}

